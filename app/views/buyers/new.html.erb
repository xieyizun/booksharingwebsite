<h1>注册账户</h1>
<div class="center">
	<%= form_for(@buyer) do |f| %>
					<p>姓名</p>
				    <%= f.text_field :name %>
				    <p>电子邮箱</p>
				    <%= f.text_field :email %>
					<p>密码</p>
				    <%= f.password_field :password %> 
					<p>密码确认</p>
				    <%= f.password_field :password_confirmation %> 
				</br>
				</br>
					<p> <%= f.submit "注册", class: "btn btn-large btn-primary" %>
					</p>
				<%= render 'shared/error_messages', object: f.object %>
	<% end %>
</div>