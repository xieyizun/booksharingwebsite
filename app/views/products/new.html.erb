<div class="center">
	<h1>发布图书</h1>
	<%= form_for @product, :html => { :multipart => true } do |f| %>
			<p>书名</p>
			<%= f.text_field :title %>
			<p>描述</p>
			<%= f.text_field :description %>
			<p>上传图书封面</p>

			<p><%= f.file_field :avatar, class: "btn btn-large btn-primary" %></p>
			</br>
			</br>
			<p> <%= f.submit "发布图书", class: "btn btn-large btn-primary" %> </p>
			<%= render 'shared/error_messages', object: f.object %>
	<% end %>
</div>